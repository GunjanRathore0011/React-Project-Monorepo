{
  "name": "react-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:task1": "npm run dev --workspace=task1",
    "dev:task2": "npm run dev --workspace=task2",
    "dev:task3": "npm run dev --workspace=task3",
    "dev:task4": "npm run dev --workspace=task4",
    "dev:task5": "npm run dev --workspace=task5",
    "dev:task6": "npm run dev --workspace=task6",
    "dev:task7": "npm run dev --workspace=task7",
    "dev:task8": "npm run dev --workspace=task8",
    "dev:task9": "npm run dev --workspace=task9",
    "dev:task10": "npm run dev --workspace=task10",
    "dev:task11": "npm run dev --workspace=task11",
    "dev:task12": "npm run dev --workspace=task12",
    "build:task1": "npm run build --workspace=task1",
    "build:task2": "npm run build --workspace=task2",
    "build:task3": "npm run build --workspace=task3",
    "build:task4": "npm run build --workspace=task4",
    "build:task5": "npm run build --workspace=task5",
    "build:task6": "npm run build --workspace=task6",
    "build:task7": "npm run build --workspace=task7",
    "build:task8": "npm run build --workspace=task8",
    "build:task9": "npm run build --workspace=task9",
    "build:task10": "npm run build --workspace=task10",
    "build:task11": "npm run build --workspace=task11",
    "build:task12": "npm run build --workspace=task12",
    "dev:all": "npm run dev --workspaces",
    "build:all": "npm run build --workspaces",
    "test": "jest",
    "coverage": "jest --coverage",
    "test:task3": "jest apps/task3",
    "coverage:task3": "jest --coverage apps/task3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4.1.16"
  }
}
